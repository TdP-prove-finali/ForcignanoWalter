<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controller">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="BASELINE_LEFT" spacing="50.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="Partenza: " />
                        <Label text="Destinazione: " />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <ComboBox fx:id="boxPartenza" />
                        <ComboBox fx:id="boxDestinazione" />
                     </children>
                  </VBox>
                  <Button fx:id="btnPercorso" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleCalcolaPercorso" text="Calcola Percorso" textAlignment="CENTER" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Seleziona se vuoi calcolare il percorso in base al tempo di percorrenza: " />
                  <RadioButton fx:id="PesoTempo" mnemonicParsing="false" onAction="#handleChangePeso" rotate="180.0" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
            <TextArea fx:id="txtArea">
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></TextArea>
         </children>
      </VBox>
   </center>
   <top>
      <Label text="CAMMINI MINIMI NELLA CITTA' DI NEW YORK" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
